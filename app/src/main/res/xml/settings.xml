<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>

        <ListPreference
            app:defaultValue="5"
            app:entries="@array/scan_interval_array"
            app:entryValues="@array/scan_interval_array"
            app:icon="@drawable/ic_fast_forward"
            app:key="scan_interval"
            app:title="@string/scan_interval_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory>

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/sort_by_array"
            app:entryValues="@array/sort_by_index_array"
            app:icon="@drawable/ic_sort"
            app:key="sort_by"
            app:title="@string/sort_access_points_by"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory>

        <ListPreference
            android:defaultValue="@string/connection_view_compact"
            app:defaultValue="@string/connection_view_compact"
            app:entries="@array/connection_display_array"
            app:entryValues="@array/connection_display_array"
            app:icon="@drawable/ic_view_carousel"
            app:key="connection_display"
            app:title="@string/connection_display_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/access_point_view_complete"
            app:defaultValue="@string/access_point_view_complete"
            app:entries="@array/access_point_display_array"
            app:entryValues="@array/access_point_display_array"
            app:icon="@drawable/ic_view_carousel"
            app:key="access_point_display"
            app:title="@string/access_point_display_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory>

        <ListPreference
            app:defaultValue="0dBm"
            app:entries="@array/graph_maximum_array"
            app:entryValues="@array/graph_maximum_array"
            app:icon="@drawable/ic_expand_less"
            app:key="graph_maximum"
            app:title="@string/graph_maximum_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Top"
            app:entries="@array/time_graph_legend_array"
            app:entryValues="@array/time_graph_legend_array"
            app:icon="@drawable/ic_show_chart"
            app:key="time_graph_legend"
            app:title="@string/time_graph_legend_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory>

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/theme_array"
            app:entryValues="@array/theme_array"
            app:icon="@drawable/ic_color_lens"
            app:key="theme"
            app:title="@string/theme_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_brightness_low"
            app:key="keep_screen_on"
            app:title="@string/keep_screen_on_title" />

    </PreferenceCategory>

    <PreferenceCategory>
        <ListPreference
            app:icon="@drawable/ic_location_on"
            app:key="country_code_key"
            app:persistent="true"
            app:summary="@string/country_code_summary"
            app:title="@string/country_code_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:icon="@drawable/ic_language"
            app:key="language_key"
            app:persistent="true"
            app:summary="@string/language_summary"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <ListPreference />

</PreferenceScreen>